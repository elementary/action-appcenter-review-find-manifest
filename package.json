{
  "name": "@elementary/action-appcenter-review-find-manifest",
  "version": "1.0.0",
  "description": "Finds the flatpak manifest in a repository",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elementary/action-appcenter-review-find-manifest.git"
  },
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map",
    "release": "semantic-release"
  },
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.2",
    "@semantic-release/release-notes-generator": "^11.0.2",
    "@vercel/ncc": "^0.36.0",
    "semantic-release": "^21.1.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "action.yml",
            "dist/**/*.{js,map}",
            "package.json"
          ]
        }
      ]
    ]
  }
}